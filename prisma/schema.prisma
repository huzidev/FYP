generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id             Int       @id @default(autoincrement())
  fullName       String
  email          String    @unique
  password       String
  role           AdminRole
  phone          String?
  address        String?
  isActive       Boolean   @default(true)
  lastLoginAt    DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  resetOtp       String?
  resetOtpExpiry DateTime?

  @@map("admins")
}

model Staff {
  id              Int              @id @default(autoincrement())
  fullName        String
  email           String           @unique
  password        String
  role            StaffRole
  staffId         String           @unique
  phone           String?
  address         String?
  salary          Float?
  hireDate        DateTime?
  isActive        Boolean          @default(true)
  lastLoginAt     DateTime?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  resetOtp        String?
  resetOtpExpiry  DateTime?
  enrollments     Enrollment[]
  teacherSubjects TeacherSubject[]

  @@map("staff")
}

model Department {
  id          Int          @id @default(autoincrement())
  name        String       @unique
  code        String       @unique
  description String?
  isActive    Boolean      @default(true)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  level       StudentLevel @default(BACHELOR)
  students    Student[]
  subjects    Subject[]
  departmentFees DepartmentFee[]

  @@map("departments")
}

model Subject {
  id              Int              @id @default(autoincrement())
  name            String
  code            String           @unique
  description     String?
  creditHours     Int              @default(3)
  semester        Int?
  level           StudentLevel?
  isActive        Boolean          @default(true)
  departmentId    Int
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  enrollments     Enrollment[]
  department      Department       @relation(fields: [departmentId], references: [id])
  teacherSubjects TeacherSubject[]
  ratePerCrHr Float  @default(0)

  @@map("subjects")
}

model TeacherSubject {
  id           Int          @id @default(autoincrement())
  teacherId    Int
  subjectId    Int
  capacity     Int          @default(50)
  isActive     Boolean      @default(true)
  semester     String?
  academicYear String?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  enrollments  Enrollment[]
  subject      Subject      @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  teacher      Staff        @relation(fields: [teacherId], references: [id], onDelete: Cascade)

  @@unique([teacherId, subjectId, semester, academicYear])
  @@map("teacher_subjects")
}

model Enrollment {
  id               Int              @id @default(autoincrement())
  studentId        Int
  subjectId        Int
  semester         String?
  academicYear     String?
  status           EnrollmentStatus @default(ACTIVE)
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
  teacherId        Int?
  teacherSubjectId Int?
  student          Student         @relation(fields: [studentId], references: [id], onDelete: Cascade)
  subject          Subject          @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  teacher          Staff?           @relation(fields: [teacherId], references: [id])
  teacherSubject   TeacherSubject?  @relation(fields: [teacherSubjectId], references: [id])
  grade            Grade?

  @@unique([studentId, subjectId, semester, academicYear])
  @@map("enrollments")
}

model Grade {
  id           Int        @id @default(autoincrement())
  enrollmentId Int        @unique
  marks        Float?
  totalMarks   Float      @default(100)
  percentage   Float?
  letterGrade  String?
  gpa          Float?
  semester     String?
  examType     String?
  remarks      String?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  enrollment   Enrollment @relation(fields: [enrollmentId], references: [id], onDelete: Cascade)

  @@map("grades")
}

model Fee {
  id            Int       @id @default(autoincrement())
  amount        Float
  paidAmount    Float     @default(0)
  dueAmount     Float?
  status        FeeStatus
  semester      String?
  academicYear  String?
  dueDate       DateTime?
  paidDate      DateTime?
  description   String?
  receiptNumber String?
  studentId     Int
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  student       Student   @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@map("fees")
}

model AcademicYear {
  id        Int      @id @default(autoincrement())
  year      String   @unique
  startDate DateTime
  endDate   DateTime
  isActive  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("academic_years")
}

model Semester {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  startDate DateTime
  endDate   DateTime
  isActive  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("semesters")
}

model Announcement {
  id            Int                    @id @default(autoincrement())
  title         String
  content       String
  imageUrl      String?
  type          AnnouncementType
  visibility    AnnouncementVisibility
  isActive      Boolean                @default(true)
  createdById   Int
  createdByType UserType
  createdAt     DateTime               @default(now())
  updatedAt     DateTime               @updatedAt
  queries       AnnouncementQuery[]

  @@map("announcements")
}

model AnnouncementQuery {
  id             Int          @id @default(autoincrement())
  content        String
  announcementId Int
  userId         Int
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  announcement   Announcement @relation(fields: [announcementId], references: [id], onDelete: Cascade)

  @@map("announcement_queries")
}

model Student {
  id             Int          @id @default(autoincrement())
  fullName       String
  email          String       @unique
  password       String
  studentId      String       @unique
  level          StudentLevel
  gender         Gender?
  phone          String?
  address        String?
  dateOfBirth    DateTime?
  fatherName     String?
  cnic           String?      @unique
  admissionDate  DateTime?
  isActive       Boolean      @default(true)
  lastLoginAt    DateTime?
  departmentId   Int
  createdAt      DateTime     @default(now())
  updatedAt      DateTime
  resetOtp       String?
  resetOtpExpiry DateTime?
  enrollments    Enrollment[]
  fees           Fee[]
  department    Department   @relation(fields: [departmentId], references: [id])
  feeVouchers    FeeVoucher[]

  @@map("students")
}

model Particular {
  id Int @id @default(autoincrement())
  name String @unique

  departmentFees DepartmentFee[]  // ‚Üê added
  voucherItems VoucherItem[]
}

model DepartmentFee {
  id Int @id @default(autoincrement())
  departmentId Int
  particularId Int
  amount Float
  department Department @relation(fields: [departmentId], references: [id])
  particular Particular @relation(fields: [particularId], references: [id])
}

model FeeVoucher {
  id Int @id @default(autoincrement())
  challanNo String @unique
  bill1Id String
  totalAmount Float
  arrears Float
  status FeeStatus @default(PENDING)
  studentId Int
  semester String   // <-- add this
  academicYear String
  validTill DateTime
  items VoucherItem[]
  student     Student   @relation(fields: [studentId], references: [id])
  isInstallment Boolean  @default(false)
  parentVoucherId Int?
  parentVoucher   FeeVoucher? @relation("Installments", fields: [parentVoucherId], references: [id])
  installments    FeeVoucher[] @relation("Installments")
}

model VoucherItem {
  id Int @id @default(autoincrement())
  voucherId Int
  particularId Int
  amount Float
  voucher FeeVoucher @relation(fields: [voucherId], references: [id])
  particular Particular @relation(fields: [particularId], references: [id])
}


enum AdminRole {
  ADMIN
  SUPER_ADMIN
}

enum StaffRole {
  ADMISSION
  TEACHER
}

enum StudentLevel {
  BACHELOR
  MASTER
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum EnrollmentStatus {
  ACTIVE
  DROPPED
  COMPLETED
}

enum FeeStatus {
  PENDING
  PAID
  PARTIAL
  OVERDUE
}

enum AnnouncementType {
  QUESTION
  ANNOUNCEMENT
}

enum AnnouncementVisibility {
  STAFF_ONLY
  STUDENTS_ONLY
  BOTH
}

enum UserType {
  ADMIN
  STAFF
  STUDENT
}
